<UserControl x:Class="UserControls.AddEditRealEstate"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:Converters="clr-namespace:Shared.Converters;assembly=Shared"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml" Foreground="Black" Loaded="addRealEstate_Loaded"
    xmlns:CustomControls="clr-namespace:CustomControls.ValidPanel;assembly=CustomControls" 
			 xmlns:UserControls="clr-namespace:UserControls" Name="addRealEstate" >
	<UserControl.Resources>
		<ResourceDictionary>
			<Converters:BoolToVisibilityInvertConverter x:Key="BoolToVisibilityInvertConverter"/>
			<Converters:StringEmptyToNullConverter x:Key="StringEmptyToNullConverter"/>
			<Converters:BoolToVisibilityConverter x:Key="BoolToVisibilityConverter"/>
			<Converters:RealEstateTypeToAptVisibilityConverter x:Key="RealEstateTypeToAptVisibilityConverter"/>
			<Converters:NullToBoolConverter x:Key="NullToBoolConverter"/>
			<Converters:EstateTypeToNotEarthPlaceVisibilityConverter x:Key="EstateTypeToNotEarthPlaceVisibilityConverter"/>
			<Converters:EstateTypeToEarthPlaceVisibilityConverter x:Key="EstateTypeToEarthPlaceVisibilityConverter"/>
			<Converters:HasItemsToEnabilityConverter x:Key="HasItemsToEnabilityConverter"/>
			<Converters:EstateTypeToFloorVisibilityConverter x:Key="EstateTypeToFloorVisibilityConverter"/>
			<Converters:GasPosibilityVisibilityConverter x:Key="GasPosibilityVisibilityConverter"/>
			<Converters:EstateTypeIDToEarthPlaceTypesVisibilityConverter x:Key="EstateTypeIDToEarthPlaceTypesVisibilityConverter"/>
			<Converters:EstateTypeIDToOfficePlaceTypesVisibilityConverter x:Key="EstateTypeIDToOfficePlaceTypesVisibilityConverter"/>
			<Converters:OrderTypeIDToPricePerDayVisibilityConverter x:Key="OrderTypeIDToPricePerDayVisibilityConverter" />
			<Converters:EstateTypeToHouseItemsVisibilityConverter x:Key="EstateTypeToHouseItemsVisibilityConverter" />
			<Converters:DaylyArendVisibilityConverter x:Key="DaylyArendVisibilityConverter" />
			<Converters:EstateTypeToEarchPlaseAndHouseVisibilityConverter x:Key="EstateTypeToEarchPlaseAndHouseVisibilityConverter" />
			<Converters:EstateTypeIDToAptHomeHeaderVisibilityConverter x:Key="EstateTypeIDToAptHomeHeaderVisibilityConverter" />
			<Converters:RealEstateTypeToElectricityConverter x:Key="RealEstateTypeToElectricityConverter" />
			<Converters:EstateToActionButtonTextConverter x:Key="EstateToActionButtonTextConverter" />
			<Converters:OrderTypeToExchangeVisibilityConverter x:Key="OrderTypeToExchangeVisibilityConverter" />
			<Converters:AptAndHomeRentVisibilityConverter x:Key="AptAndHomeRentVisibilityConverter" />
			<Converters:VisibleWhenAppartmentConverter x:Key="VisibleWhenAppartmentConverter" />
			<Converters:VisibleWhenAppartmentOrHouseConverter x:Key="VisibleWhenAppartmentOrHouseConverter" />
			<Converters:VisibleWhenHouseConverter x:Key="VisibleWhenHouseConverter" />
			<Converters:VisibleWhenOfficePlaceConverter x:Key="VisibleWhenOfficePlaceConverter" />
			<Converters:AptRentVisibilityConverter x:Key="AptRentVisibilityConverter" />
			<Converters:NotEarthPlaceRentVisibilityConverter x:Key="NotEarthPlaceRentVisibilityConverter" />
			<Converters:EarthPlaceSelectedToItemVisibilityConverter x:Key="EarthPlaceSelectedToItemVisibilityConverter" />
			<Converters:IsMainToBorderThiknessConverter x:Key="IsMainToBorderThiknessConverter" />
			<Converters:IsMainToToolTipConverter x:Key="IsMainToToolTipConverter" />
		</ResourceDictionary>
	</UserControl.Resources>
	<ScrollViewer VerticalScrollBarVisibility="Auto" HorizontalScrollBarVisibility="Disabled" Margin="3">
		<CustomControls:ValidPanel x:Name="vpEstate">
			<Grid DataContext="{Binding Path=RealEstate, ElementName=addRealEstate, Mode=TwoWay}" KeyUp="Grid_KeyUp">
				<Grid.RowDefinitions>
					<RowDefinition Height="50"/>
					<RowDefinition Height="*"/>
				</Grid.RowDefinitions>
				<TextBlock Name="tblkTitle" />
				<StackPanel Orientation="Vertical" Grid.Row="1" Margin="3" HorizontalAlignment="Stretch" VerticalAlignment="Stretch">
					<GroupBox Header="{Binding Source={StaticResource CultureResources},Path=[MainData]}" Margin="3">
						<StackPanel Orientation="Vertical" HorizontalAlignment="Stretch">

							<Grid HorizontalAlignment="Stretch" VerticalAlignment="Stretch" Margin="3">
								<Grid.ColumnDefinitions>
									<ColumnDefinition Width="35*"/>
									<ColumnDefinition Width="5"/>
									<ColumnDefinition Width="65*"/>
								</Grid.ColumnDefinitions>
								<TextBlock Text="{Binding Source={StaticResource CultureResources},Path=[CodeP]}" HorizontalAlignment="Right" VerticalAlignment="Center" />
								<TextBox Name="txtCode" Grid.Column="2" MinWidth="200" HorizontalAlignment="Left"
                                         Text="{Binding Path=Code, UpdateSourceTrigger=PropertyChanged, ValidatesOnDataErrors=True, Mode=TwoWay}" />
							</Grid>

							<Grid HorizontalAlignment="Stretch" VerticalAlignment="Stretch" Margin="3">
								<Grid.ColumnDefinitions>
									<ColumnDefinition Width="35*"/>
									<ColumnDefinition Width="5"/>
									<ColumnDefinition Width="65*"/>
								</Grid.ColumnDefinitions>
								<TextBlock Text="{Binding Source={StaticResource CultureResources},Path=[TheEstateTypeP]}" HorizontalAlignment="Right" VerticalAlignment="Center" />

                                <StackPanel Orientation="Horizontal" Grid.Column="2" >
                                    <ComboBox Name="cbRealEstateType" ItemsSource="{Binding Path=RealEstateTypes, ElementName=addRealEstate}" 
										    IsEditable="False" MinWidth="200" HorizontalAlignment="Left" DisplayMemberPath="TypeName" SelectionChanged="cbRealEstateType_SelectionChanged"
										    SelectedValue="{Binding Path=EstateTypeID, UpdateSourceTrigger=PropertyChanged, ValidatesOnDataErrors=True, Mode=TwoWay}" SelectedValuePath="EstateTypeID"
                                              SelectedItem="{Binding Path=EstateType, UpdateSourceTrigger=PropertyChanged, Mode=TwoWay}"/>
                                    <CheckBox IsChecked="{Binding Path=IsOverseas, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}" VerticalAlignment="Center"
                                              ToolTip="{Binding Source={StaticResource CultureResources},Path=[Overseas]}" Margin="10,0,0,0" x:Name="chkIsOverseas" />
                                </StackPanel>
                            </Grid>

							<Grid HorizontalAlignment="Stretch" VerticalAlignment="Stretch" Margin="3">
								<Grid.ColumnDefinitions>
									<ColumnDefinition Width="35*"/>
									<ColumnDefinition Width="5"/>
									<ColumnDefinition Width="65*"/>
								</Grid.ColumnDefinitions>
								<TextBlock Text="{Binding Source={StaticResource CultureResources},Path=[TheOrderTypeP]}" HorizontalAlignment="Right" VerticalAlignment="Center" />
								<ComboBox Name="cbOrderTypes" Grid.Column="2" ItemsSource="{Binding Path=OrderTypes, ElementName=addRealEstate}" 
                                            IsEditable="False" MinWidth="200" HorizontalAlignment="Left" DisplayMemberPath="Name" SelectedValuePath="OrderTypeID"
                                            SelectedValue="{Binding Path=OrderTypeID, UpdateSourceTrigger=PropertyChanged, ValidatesOnDataErrors=True, Mode=TwoWay}" 
							                SelectedItem="{Binding Path=OrderType, UpdateSourceTrigger=PropertyChanged, Mode=TwoWay}" />
							</Grid>

							<Grid HorizontalAlignment="Stretch" VerticalAlignment="Stretch" Margin="3">
								<Grid.ColumnDefinitions>
									<ColumnDefinition Width="35*"/>
									<ColumnDefinition Width="5"/>
									<ColumnDefinition Width="65*"/>
								</Grid.ColumnDefinitions>
								<TextBlock Text="{Binding Source={StaticResource CultureResources},Path=[StateP]}" HorizontalAlignment="Right" VerticalAlignment="Center"
                                           Visibility="{Binding Path=IsOverseas, Converter={StaticResource BoolToVisibilityInvertConverter}}"/>
                                <TextBlock Text="{Binding Source={StaticResource CultureResources},Path=[CountryP]}" HorizontalAlignment="Right" VerticalAlignment="Center"
                                           Visibility="{Binding Path=IsOverseas, Converter={StaticResource BoolToVisibilityConverter}}"/>
								<ComboBox Name="cbStates" Grid.Column="2" ItemsSource="{Binding Path=States, ElementName=addRealEstate}" 
                                            IsEditable="False" MinWidth="200" HorizontalAlignment="Left"  DisplayMemberPath="Name"
                                            SelectedValue="{Binding Path=StateID, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}" SelectedValuePath="ID" SelectionChanged="cbStates_SelectionChanged"
                                            SelectedItem="{Binding Path=State, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"
                                            Visibility="{Binding Path=IsOverseas, Converter={StaticResource BoolToVisibilityInvertConverter}}"/>
                                <ComboBox Name="cbCountries" Grid.Column="2" ItemsSource="{Binding Path=Countries, ElementName=addRealEstate}" 
                                            IsEditable="False" MinWidth="200" HorizontalAlignment="Left"  DisplayMemberPath="Name"
                                            SelectedValue="{Binding Path=CountryID, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}" SelectedValuePath="ID" SelectionChanged="cbCountries_SelectionChanged"
                                            Visibility="{Binding Path=IsOverseas, Converter={StaticResource BoolToVisibilityConverter}}"/>
							</Grid>

							<Grid HorizontalAlignment="Stretch" VerticalAlignment="Stretch" Margin="3">
								<Grid.ColumnDefinitions>
									<ColumnDefinition Width="35*"/>
									<ColumnDefinition Width="5"/>
									<ColumnDefinition Width="65*"/>
								</Grid.ColumnDefinitions>
								<TextBlock Text="{Binding Source={StaticResource CultureResources},Path=[CityP]}" HorizontalAlignment="Right" VerticalAlignment="Center" />
								<ComboBox Name="cbCities" Grid.Column="2" ItemsSource="{Binding Path=Cities, ElementName=addRealEstate}" 
                                        IsEditable="False" HorizontalAlignment="Left" MinWidth="200" DisplayMemberPath="Name"
                                        SelectedValue="{Binding Path=CityID, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}" SelectedValuePath="CityID" SelectionChanged="cbCities_SelectionChanged" 
                                          SelectedItem="{Binding Path=City, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"/>
							</Grid>

							<Grid HorizontalAlignment="Stretch" VerticalAlignment="Stretch" Margin="3"
                                  Visibility="{Binding Path=IsChecked, ElementName=chkIsOverseas, Converter={StaticResource BoolToVisibilityInvertConverter}}">
								<Grid.ColumnDefinitions>
									<ColumnDefinition Width="35*"/>
									<ColumnDefinition Width="5"/>
									<ColumnDefinition Width="65*"/>
								</Grid.ColumnDefinitions>
								<TextBlock Text="{Binding Source={StaticResource CultureResources},Path=[RegionP]}" HorizontalAlignment="Right" VerticalAlignment="Center" />
								<ComboBox Name="cbRegions" Grid.Column="2" ItemsSource="{Binding Path=Regions, ElementName=addRealEstate}" 
										IsEditable="False" MinWidth="200" HorizontalAlignment="Left" DisplayMemberPath="Name" 
										IsEnabled="{Binding Path=Regions, ElementName=addRealEstate, Converter={StaticResource HasItemsToEnabilityConverter}}"
										SelectedValue="{Binding Path=RegionID, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}" SelectionChanged="cbRegions_SelectionChanged" SelectedValuePath="RegionID"
                                        SelectedItem="{Binding Path=Region, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"/>
							</Grid>

							<Grid HorizontalAlignment="Stretch" VerticalAlignment="Stretch" Margin="3">
								<Grid.ColumnDefinitions>
									<ColumnDefinition Width="35*"/>
									<ColumnDefinition Width="5"/>
									<ColumnDefinition Width="65*"/>
								</Grid.ColumnDefinitions>
								<TextBlock Text="{Binding Source={StaticResource CultureResources},Path=[AddressP]}" VerticalAlignment="Center" HorizontalAlignment="Right" />

                                <TextBox Text="{Binding Path=Address, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}" VerticalAlignment="Center" HorizontalAlignment="Left" Grid.Column="2" 
                                         Visibility="{Binding Path=IsOverseas, Converter={StaticResource BoolToVisibilityConverter}}" Width="200"/>
                                
								<StackPanel Orientation="Horizontal" HorizontalAlignment="Left" VerticalAlignment="Center" Grid.Column="2"
                                            Visibility="{Binding Path=IsChecked, ElementName=chkIsOverseas, Converter={StaticResource BoolToVisibilityInvertConverter}}">
									<StackPanel Orientation="Vertical">
										<TextBlock Text="{Binding Source={StaticResource CultureResources},Path=[Street]}"/>
										<ComboBox Name="cbStreets" MinWidth="200" DisplayMemberPath="Name"
											 SelectedValue="{Binding Path=StreetID, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}" SelectedValuePath="StreetID" 
                                             SelectedItem="{Binding Path=Street, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"
                                              ItemsSource="{Binding Path=Streets, ElementName=addRealEstate}" />
									</StackPanel>

									<StackPanel Margin="10,0,0,0" Visibility="{Binding Path=SelectedItem, ElementName=cbRealEstateType, Converter={StaticResource EstateTypeToNotEarthPlaceVisibilityConverter}}">
										<TextBlock Text="{Binding Path=SelectedValue, ElementName=cbRealEstateType, Converter={StaticResource EstateTypeIDToAptHomeHeaderVisibilityConverter}}"/>
										<TextBox MinWidth="50" Name="txtHomeNumber" Text="{Binding Path=HomeNumber}"/>
									</StackPanel>

									<StackPanel Visibility="{Binding Path=SelectedItem, ElementName=cbRealEstateType, Converter={StaticResource RealEstateTypeToAptVisibilityConverter}}" Margin="10,0,0,0">
										<TextBlock Text="{Binding Source={StaticResource CultureResources},Path=[AptP]}"/>
										<TextBox MinWidth="50" Name="txtAptNumber" 
                                             Text="{Binding Path=AptNumber, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged, ValidatesOnDataErrors=True, Converter={StaticResource StringEmptyToNullConverter}}"/>
									</StackPanel>
									<StackPanel Visibility="{Binding Path=SelectedItem, ElementName=cbRealEstateType, Converter={StaticResource EstateTypeToEarthPlaceVisibilityConverter}}"
											Margin="10,0,0,0">
										<TextBlock Text="{Binding Source={StaticResource CultureResources},Path=[LandNumber]}" HorizontalAlignment="Left" VerticalAlignment="Center" />
										<TextBox Width="100" HorizontalAlignment="Left" Text="{Binding Path=LandNumber, UpdateSourceTrigger=PropertyChanged, Mode=TwoWay, Converter={StaticResource StringEmptyToNullConverter}}" />
									</StackPanel>
								</StackPanel>
							</Grid>
							
							
							
							<Grid HorizontalAlignment="Stretch" VerticalAlignment="Stretch" Margin="3">
								<Grid.ColumnDefinitions>
									<ColumnDefinition Width="35*"/>
									<ColumnDefinition Width="5"/>
									<ColumnDefinition Width="65*"/>
								</Grid.ColumnDefinitions>
								<TextBlock Text="{Binding Source={StaticResource CultureResources},Path=[PlaceNameP]}" HorizontalAlignment="Right" VerticalAlignment="Center" />
								<TextBox Name="txtPlaceName" Grid.Column="2" MinWidth="200" HorizontalAlignment="Left" 
										Text="{Binding Path=PlaceName, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}" />
							</Grid>

							<Grid HorizontalAlignment="Stretch" VerticalAlignment="Stretch" Margin="3" 
								Visibility="{Binding Source={x:Static UserControls:Session.Inst}, Path=IsWebEnabled, Converter={StaticResource BoolToVisibilityConverter}}">
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="35*"/>
                                    <ColumnDefinition Width="5"/>
                                    <ColumnDefinition Width="65*"/>
                                </Grid.ColumnDefinitions>
                                <TextBlock Text="{Binding Source={StaticResource CultureResources},Path=[PlaceNameForSiteP]}" HorizontalAlignment="Right" VerticalAlignment="Center" />
                                <TextBox Name="txtPlaceNameForSite" Grid.Column="2" MinWidth="200" HorizontalAlignment="Left" 
										Text="{Binding Path=PlaceNameSite, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}" />
                            </Grid>

							<Grid HorizontalAlignment="Stretch" VerticalAlignment="Stretch" Margin="3" 
								Visibility="{Binding Path=SelectedValue, ElementName=cbRealEstateType, Converter={StaticResource EstateTypeIDToOfficePlaceTypesVisibilityConverter}}">
								<Grid.ColumnDefinitions>
									<ColumnDefinition Width="35*"/>
									<ColumnDefinition Width="5"/>
									<ColumnDefinition Width="65*"/>
								</Grid.ColumnDefinitions>
								<TextBlock Text="{Binding Source={StaticResource CultureResources},Path=[PlaceTypeP]}" HorizontalAlignment="Right" VerticalAlignment="Center" />
								<ComboBox Name="cbOfficePlaceTypes" Grid.Column="2" ItemsSource="{Binding Path=OfficePlaceTypes, ElementName=addRealEstate}" 
										IsEditable="False" MinWidth="200" HorizontalAlignment="Left" DisplayMemberPath="Name" 
										SelectedValue="{Binding Path=OfficePlaceTypeID}" SelectedValuePath="ID"/>
							</Grid>

							<Grid HorizontalAlignment="Stretch" VerticalAlignment="Stretch" Margin="3"
							  Visibility="{Binding Path=SelectedItem, ElementName=cbRealEstateType, Converter={StaticResource EstateTypeToFloorVisibilityConverter}}">
								<Grid.ColumnDefinitions>
									<ColumnDefinition Width="35*"/>
									<ColumnDefinition Width="5"/>
									<ColumnDefinition Width="65*"/>
								</Grid.ColumnDefinitions>
								<TextBlock Text="{Binding Source={StaticResource CultureResources},Path=[ProjectP]}" HorizontalAlignment="Right" VerticalAlignment="Center" />
								<ComboBox Name="cbProjects" Grid.Column="2" ItemsSource="{Binding Path=Projects, ElementName=addRealEstate}" 
										IsEditable="False" MinWidth="200" HorizontalAlignment="Left" DisplayMemberPath="Name" 
										SelectedValue="{Binding Path=ProjectID, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}" SelectedValuePath="ProjectID" 
                                          SelectedItem="{Binding Path=Project, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"/>
							</Grid>

							<Grid HorizontalAlignment="Stretch" VerticalAlignment="Stretch" Margin="3"
							  Visibility="{Binding Path=SelectedItem, ElementName=cbRealEstateType, Converter={StaticResource EstateTypeToNotEarthPlaceVisibilityConverter}}">
								<Grid.ColumnDefinitions>
									<ColumnDefinition Width="35*"/>
									<ColumnDefinition Width="5"/>
									<ColumnDefinition  Width="65*"/>
								</Grid.ColumnDefinitions>
								<TextBlock Text="{Binding Source={StaticResource CultureResources},Path=[TheBuildingTypeP]}" HorizontalAlignment="Right" VerticalAlignment="Center" />
								<StackPanel Orientation="Horizontal" Grid.Column="2" HorizontalAlignment="Left">
									<ComboBox Name="cbBuildingTypes" ItemsSource="{Binding Path=BuildingTypes, ElementName=addRealEstate}" 
									    IsEditable="False" MinWidth="200" DisplayMemberPath="Name" 
									    SelectedValue="{Binding Path=BuildingTypeID, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}" SelectedValuePath="BuildingTypeID" 
                                              SelectedItem="{Binding Path=BuildingType, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"/>
									<TextBlock Text="{Binding Source={StaticResource CultureResources},Path=[RoofingP]}" Margin="5,0,0,0"/>
									<ComboBox Name="cbRoofings" ItemsSource="{Binding Path=Roofings, ElementName=addRealEstate}"
									    IsEditable="False" MinWidth="200" HorizontalAlignment="Left" DisplayMemberPath="Name" Margin="3,0,0,0"
									    SelectedValue="{Binding Path=RoofingID, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}" SelectedValuePath="ID" 
                                              SelectedItem="{Binding Path=Roofing, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"/>
								</StackPanel>
							</Grid>

							<Grid HorizontalAlignment="Stretch" VerticalAlignment="Stretch" Margin="3"
							  Visibility="{Binding Path=SelectedItem, ElementName=cbRealEstateType, Converter={StaticResource EstateTypeToNotEarthPlaceVisibilityConverter}}">
								<Grid.ColumnDefinitions>
									<ColumnDefinition Width="35*"/>
									<ColumnDefinition Width="5"/>
									<ColumnDefinition Width="65*"/>
								</Grid.ColumnDefinitions>
								<TextBlock Text="{Binding Source={StaticResource CultureResources},Path=[RoomCountP]}" HorizontalAlignment="Right" VerticalAlignment="Center" />
								<StackPanel Orientation="Horizontal" Grid.Column="2" HorizontalAlignment="Left">
									<TextBox Name="txtRoomsCount" MinWidth="200"  
                                         Text="{Binding Path=RoomCount, UpdateSourceTrigger=PropertyChanged, ValidatesOnDataErrors=True, Mode=TwoWay, Converter={StaticResource StringEmptyToNullConverter}}" />
									<TextBlock Text="{Binding Source={StaticResource CultureResources},Path=[MakedRoomsP]}" HorizontalAlignment="Right" 
											VerticalAlignment="Center" Margin="5,0,3,0"
											Visibility="{Binding Path=SelectedItem, ElementName=cbRealEstateType, Converter={StaticResource EstateTypeToNotEarthPlaceVisibilityConverter}}"/>
									<TextBox Name="txtMakedRoomsCount" Width="100"  
                                         Text="{Binding Path=MakedRooms, UpdateSourceTrigger=PropertyChanged, ValidatesOnDataErrors=True, Mode=TwoWay, Converter={StaticResource StringEmptyToNullConverter}}" 
										 Visibility="{Binding Path=SelectedItem, ElementName=cbRealEstateType, Converter={StaticResource EstateTypeToNotEarthPlaceVisibilityConverter}}"/>
								</StackPanel>
							</Grid>

							<Grid HorizontalAlignment="Stretch" VerticalAlignment="Stretch" Margin="3">
								<Grid.ColumnDefinitions>
									<ColumnDefinition Width="35*"/>
									<ColumnDefinition Width="5"/>
									<ColumnDefinition Width="65*"/>
								</Grid.ColumnDefinitions>
								<TextBlock Text="{Binding Source={StaticResource CultureResources},Path=[SquareP]}" HorizontalAlignment="Right" VerticalAlignment="Center" />
								<StackPanel Orientation="Horizontal" Grid.Column="2" HorizontalAlignment="Left">
									<TextBox Name="txtTotalSquare" MinWidth="200" 
										Text="{Binding Path=TotalSquare, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged, ValidatesOnDataErrors=True, Converter={StaticResource StringEmptyToNullConverter}}"/>

									<TextBlock Text="{Binding Source={StaticResource CultureResources},Path=[LiveSquareP]}" HorizontalAlignment="Right" VerticalAlignment="Center" Margin="11,0,3,0" 
												Visibility="{Binding Path=SelectedItem, ElementName=cbRealEstateType, Converter={StaticResource EstateTypeToNotEarthPlaceVisibilityConverter}}"/>
									<TextBox Name="txtLiveSquare" Grid.Column="2" MinWidth="100" HorizontalAlignment="Left"
										Text="{Binding Path=Square, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged, ValidatesOnDataErrors=True, Converter={StaticResource StringEmptyToNullConverter}}"
										Visibility="{Binding Path=SelectedItem, ElementName=cbRealEstateType, Converter={StaticResource EstateTypeToNotEarthPlaceVisibilityConverter}}"/>
								</StackPanel>
							</Grid>

							<Grid HorizontalAlignment="Stretch" VerticalAlignment="Stretch" Margin="3" 
							  Visibility="{Binding Path=SelectedItem, ElementName=cbRealEstateType, Converter={StaticResource EstateTypeToFloorVisibilityConverter}}">
								<Grid.ColumnDefinitions>
									<ColumnDefinition Width="35*"/>
									<ColumnDefinition Width="5"/>
									<ColumnDefinition Width="65*"/>
								</Grid.ColumnDefinitions>
								<TextBlock Text="{Binding Source={StaticResource CultureResources},Path=[FloorP]}" HorizontalAlignment="Right" VerticalAlignment="Center" />
								
								<StackPanel Orientation="Horizontal" Grid.Column="2" >
									<TextBox Name="txtFloor" Width="200" HorizontalAlignment="Left" 
                                         Text="{Binding Path=Floor, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged, Converter={StaticResource StringEmptyToNullConverter}}" />
									<TextBlock Text="{Binding Source={StaticResource CultureResources},Path=[and]}" HorizontalAlignment="Right" VerticalAlignment="Center" Margin="5,0,0,0" />
								<TextBox Name="txtFloorAdditional" Width="100" HorizontalAlignment="Left" Margin="5,0" 
                                         Text="{Binding Path=FloorAdditional, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged, Converter={StaticResource StringEmptyToNullConverter}}" />
								</StackPanel>
							</Grid>

							<Grid HorizontalAlignment="Stretch" VerticalAlignment="Stretch" Margin="3"
							    Visibility="{Binding Path=SelectedItem, ElementName=cbRealEstateType, Converter={StaticResource EstateTypeToNotEarthPlaceVisibilityConverter}}">
								<Grid.ColumnDefinitions>
									<ColumnDefinition Width="35*"/>
									<ColumnDefinition Width="5"/>
									<ColumnDefinition Width="65*"/>
								</Grid.ColumnDefinitions>
								<TextBlock Text="{Binding Source={StaticResource CultureResources},Path=[BuildingFloors]}" HorizontalAlignment="Right" VerticalAlignment="Center" />
								<TextBox Name="txtBuildingFloorsCount" Grid.Column="2" MinWidth="200" HorizontalAlignment="Left"
										Text="{Binding Path=BuildingFloorsCount, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged, Converter={StaticResource StringEmptyToNullConverter}}" />
							</Grid>

							<Grid HorizontalAlignment="Stretch" VerticalAlignment="Stretch" Margin="3">
								<Grid.ColumnDefinitions>
									<ColumnDefinition Width="35*"/>
									<ColumnDefinition Width="5"/>
									<ColumnDefinition Width="65*"/>
								</Grid.ColumnDefinitions>
								<TextBlock Text="{Binding Source={StaticResource CultureResources},Path=[PriceP]}" HorizontalAlignment="Right" VerticalAlignment="Center" />
								<StackPanel Orientation="Horizontal" Grid.Column="2" HorizontalAlignment="Left" >
									<TextBox Name="txtPrice" MinWidth="200" 
                                             Text="{Binding Path=Price, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged, ValidatesOnDataErrors=True, Converter={StaticResource StringEmptyToNullConverter}}" />
									<ComboBox Name="cbCurrencies" IsEditable="False" ItemsSource="{Binding Path=Currencies, ElementName=addRealEstate}"
											 SelectedValue="{Binding Path=CurrencyID, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}" SelectedValuePath="CurrencyID" DisplayMemberPath="Name"  Margin="5,0,0,0"
                                              SelectedItem="{Binding Path=Currency, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"/>
								</StackPanel>
							</Grid>

							<Grid HorizontalAlignment="Stretch" VerticalAlignment="Stretch" Margin="3" 
                                   Visibility="{Binding Path=SelectedItem, ElementName=cbRealEstateType, Converter={StaticResource EarthPlaceSelectedToItemVisibilityConverter}}">
								<Grid.ColumnDefinitions>
									<ColumnDefinition Width="35*"/>
									<ColumnDefinition Width="5"/>
									<ColumnDefinition Width="65*"/>
								</Grid.ColumnDefinitions>
								<TextBlock Text="{Binding Source={StaticResource CultureResources},Path=[TheUsingP]}" HorizontalAlignment="Right" VerticalAlignment="Center" />
								<ComboBox Name="cbSignificanceOfTheUses" Grid.Column="2" ItemsSource="{Binding Path=SignificanceOfTheUses, ElementName=addRealEstate}" 
										IsEditable="False" MinWidth="200" HorizontalAlignment="Left" DisplayMemberPath="Name" SelectionChanged="cbSignificanceOfTheUses_SelectionChanged"
                                        IsEnabled="{Binding Path=SignificanceOfTheUses, ElementName=addRealEstate, Converter={StaticResource HasItemsToEnabilityConverter}}"
										SelectedValue="{Binding Path=SignificanceOfTheUseID, UpdateSourceTrigger=PropertyChanged, Mode=TwoWay}" SelectedValuePath="ID" 
                                        SelectedItem="{Binding Path=SignificanceOfTheUse, UpdateSourceTrigger=PropertyChanged, Mode=TwoWay}"/>
							</Grid>

							<Grid HorizontalAlignment="Stretch" VerticalAlignment="Stretch" Margin="3" 
                                  Visibility="{Binding Path=SelectedItem, ElementName=cbRealEstateType, Converter={StaticResource EarthPlaceSelectedToItemVisibilityConverter}}">
								<Grid.ColumnDefinitions>
									<ColumnDefinition Width="35*"/>
									<ColumnDefinition Width="5"/>
									<ColumnDefinition Width="65*"/>
								</Grid.ColumnDefinitions>
								<TextBlock Text="{Binding Source={StaticResource CultureResources},Path=[TheOperationalSignificancesP]}" HorizontalAlignment="Right" VerticalAlignment="Center" />
								<ComboBox Name="cbOperationalSignificances" Grid.Column="2" ItemsSource="{Binding Path=OperationalSignificances, ElementName=addRealEstate}" 
										  IsEditable="False" MinWidth="200" HorizontalAlignment="Left" DisplayMemberPath="Name" 
										  IsEnabled="{Binding Path=OperationalSignificances, ElementName=addRealEstate, Converter={StaticResource HasItemsToEnabilityConverter}}"
                                          SelectedValue="{Binding Path=OperationalSignificanceID, UpdateSourceTrigger=PropertyChanged, Mode=TwoWay}" SelectedValuePath="ID" 
                                          SelectedItem="{Binding Path=OperationalSignificance, UpdateSourceTrigger=PropertyChanged, Mode=TwoWay}"/>
							</Grid>


							<Grid HorizontalAlignment="Stretch" VerticalAlignment="Stretch" Margin="3" 
							Visibility="{Binding Path=SelectedItem, ElementName=cbRealEstateType, Converter={StaticResource EstateTypeToNotEarthPlaceVisibilityConverter}}">
								<Grid.ColumnDefinitions>
									<ColumnDefinition Width="35*"/>
									<ColumnDefinition Width="5"/>
									<ColumnDefinition Width="65*"/>
								</Grid.ColumnDefinitions>
								<TextBlock Text="{Binding Source={StaticResource CultureResources},Path=[HeightP]}" HorizontalAlignment="Right" VerticalAlignment="Center" />
								<TextBox Name="txtHeight" Grid.Column="2" MinWidth="200" HorizontalAlignment="Left" Text="{Binding Path=Height, UpdateSourceTrigger=PropertyChanged, Mode=TwoWay}" />
							</Grid>

							<Grid HorizontalAlignment="Stretch" VerticalAlignment="Stretch" Margin="3" 
							Visibility="{Binding Path=SelectedItem, ElementName=cbRealEstateType, Converter={StaticResource EstateTypeToNotEarthPlaceVisibilityConverter}}">
								<Grid.ColumnDefinitions>
									<ColumnDefinition Width="35*"/>
									<ColumnDefinition Width="5"/>
									<ColumnDefinition Width="65*"/>
								</Grid.ColumnDefinitions>

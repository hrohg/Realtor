							<ItemsControl ItemsSource="{Binding Path=OfficePlaceConvenients, ElementName=addRealEstate}" x:Name="icConvenients" Loaded="icConvenients_Loaded" >
								<ItemsControl.ItemsPanel>
									<ItemsPanelTemplate>
										<WrapPanel Orientation="Horizontal"/>
									</ItemsPanelTemplate>
								</ItemsControl.ItemsPanel>
								<ItemsControl.ItemTemplate>
									<DataTemplate>
										<CheckBox Content="{Binding Path=Name}" CommandParameter="{Binding}" x:Name="chkConvenient" VerticalAlignment="Center"
                                              Checked="chkConvenient_Checked" Unchecked="chkConvenient_Checked" Margin="10,0,0,0"/>
									</DataTemplate>
								</ItemsControl.ItemTemplate>
							</ItemsControl>
							<StackPanel Orientation="Horizontal" Margin="3,10,0,0">
								<TextBlock Text="{Binding Source={StaticResource CultureResources},Path=[AndConvenientFor]}" />
								<TextBox Text="{Binding Path=AdditionalConvenients}" Width="500" Margin="5,0,0,0" />
							</StackPanel>
						</StackPanel>
					</GroupBox>
					<GroupBox Header="{Binding Source={StaticResource CultureResources},Path=[OtherDetails]}"  Margin="3">
						<StackPanel Orientation="Vertical" Margin="3,3,30,3" >
							<StackPanel Orientation="Horizontal" HorizontalAlignment="Right" Margin="2">
								<TextBlock Text="{Binding Source={StaticResource CultureResources},Path=[AdditionalDataP]}"/>
								<TextBox Name="txtAdditionalInformation" MinWidth="200" Margin="5,0,0,0" 
                                     AutoWordSelection="True" AcceptsReturn="True" AcceptsTab="True" HorizontalAlignment="Right" 
                                     HorizontalScrollBarVisibility="Disabled" Height="130" Width="400" TextWrapping="Wrap"  
                                     Text="{Binding Path=AdditionalInformation, Mode=TwoWay}"/>
							</StackPanel>
                            <StackPanel Orientation="Horizontal" HorizontalAlignment="Right" Margin="2"
                                        Visibility="{Binding Source={x:Static UserControls:Session.Inst}, Path=IsWebEnabled, Converter={StaticResource BoolToVisibilityConverter}}">
                                <TextBlock Text="{Binding Source={StaticResource CultureResources},Path=[AdditDetailsForSiteP]}"/>
								<TextBox Name="txtAdditionalInformationSite" MinWidth="200" Margin="5,0,0,0" 
                                     AutoWordSelection="True" AcceptsReturn="True" AcceptsTab="True" HorizontalAlignment="Right" 
                                     HorizontalScrollBarVisibility="Disabled" Height="130" Width="400" TextWrapping="Wrap"  
                                     Text="{Binding Path=AdditionalDetailsSite, Mode=TwoWay}"/>
							</StackPanel>
							<StackPanel Orientation="Horizontal" HorizontalAlignment="Right" Margin="2" 
                                        Visibility="{Binding Path=IsChecked, ElementName=chkExchange, Converter={StaticResource BoolToVisibilityConverter}}">
								<TextBlock Text="{Binding Source={StaticResource CultureResources},Path=[ExchangeWithWhat]}"/>
								<TextBox Name="txtExchange" MinWidth="200" Margin="5,0,0,0" 
                                     AutoWordSelection="True" AcceptsReturn="True" AcceptsTab="True" HorizontalAlignment="Right" 
                                     HorizontalScrollBarVisibility="Disabled" Height="100" Width="400" 
                                     Text="{Binding Path=ExchangeWith, Mode=TwoWay}" TextWrapping="Wrap" />
							</StackPanel>
							<StackPanel Orientation="Horizontal" Visibility="{Binding Path=IsChecked, ElementName=chkHasPodval, Converter={StaticResource BoolToVisibilityConverter}}"
                                HorizontalAlignment="Right" Margin="2">
								<TextBlock Text="{Binding Source={StaticResource CultureResources},Path=[PodvalSquareP]}"/>
								<TextBox Name="txtPodvalSquare" MinWidth="200" Margin="5,0,0,0" 
                                         Text="{Binding Path=PadvalSquare, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged, ValidatesOnDataErrors=True, Converter={StaticResource StringEmptyToNullConverter}}"/>
							</StackPanel>
							<StackPanel Orientation="Horizontal" Visibility="{Binding Path=IsChecked, ElementName=chkHasGarden, Converter={StaticResource BoolToVisibilityConverter}}"
                                HorizontalAlignment="Right" Margin="2">
								<TextBlock Text="{Binding Source={StaticResource CultureResources},Path=[EarthPlaceSquareP]}"/>
								<TextBox Name="txtGardenSquare" MinWidth="200" Margin="5,0,0,0" 
                                         Text="{Binding Path=GardenSquare, UpdateSourceTrigger=PropertyChanged, ValidatesOnDataErrors=True, Mode=TwoWay, Converter={StaticResource StringEmptyToNullConverter}}"/>
							</StackPanel>
							<StackPanel Orientation="Horizontal" Visibility="{Binding Path=IsChecked, ElementName=chkHasGarage, Converter={StaticResource BoolToVisibilityConverter}}"
                                HorizontalAlignment="Right" Margin="2">
								<TextBlock Text="{Binding Source={StaticResource CultureResources},Path=[GarageTypeP]}"/>
								<ComboBox x:Name="cbGarageTypes" MinWidth="200" Margin="5,0,0,0" IsEditable="False"
										  ItemsSource="{Binding Path=GarageTypes, ElementName=addRealEstate}"
										  SelectedValue="{Binding Path=GarageTypeID}" SelectedValuePath="ID" DisplayMemberPath="Name"/>
							</StackPanel>
							<StackPanel Orientation="Horizontal" HorizontalAlignment="Right" Margin="2">
								<TextBlock Text="{Binding Source={StaticResource CultureResources},Path=[RatingP]}"/>
								<ComboBox x:Name="cbRating" MinWidth="200" Margin="5,0,0,0" IsEditable="False"
										  ItemsSource="{Binding Path=Ratings, ElementName=addRealEstate}"
										  SelectedValue="{Binding Path=Rating}" />
							</StackPanel>
							<StackPanel Orientation="Horizontal" HorizontalAlignment="Right" Margin="2">
								<TextBlock Text="{Binding Source={StaticResource CultureResources},Path=[StatusP]}"/>
								<TextBox x:Name="txtStatus" MinWidth="200" Margin="5,0,0,0" MaxLength="49"
										  Text="{Binding Path=Status, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}" />
							</StackPanel>
						</StackPanel>
					</GroupBox>

					<GroupBox Header="{Binding Source={StaticResource CultureResources},Path=[ContactDetails]}"  Margin="3">
						<Grid>
							<Grid.RowDefinitions>
								<RowDefinition Height="25"/>
								<RowDefinition Height="25"/>
								<RowDefinition Height="25"/>
							</Grid.RowDefinitions>
							<Grid.ColumnDefinitions>
								<ColumnDefinition Width="35*" />
								<ColumnDefinition Width="5" />
								<ColumnDefinition Width="65*" />
							</Grid.ColumnDefinitions>

							<TextBlock Text="{Binding Source={StaticResource CultureResources},Path=[NameP]}" HorizontalAlignment="Right"/>
							<TextBox Name="txtSellerName" Text="{Binding Path=SellerName}" Grid.Column="2"/>

							<TextBlock Text="{Binding Source={StaticResource CultureResources},Path=[Telephone1P]}" Grid.Row="1" HorizontalAlignment="Right"/>
							<TextBox Name="txtTelephone1" Text="{Binding Path=PhonePrimary, UpdateSourceTrigger=PropertyChanged, ValidatesOnDataErrors=True}" Grid.Column="2" Grid.Row="1"/>

							<TextBlock Text="{Binding Source={StaticResource CultureResources},Path=[Telephone2P]}" Grid.Row="2" HorizontalAlignment="Right"/>
							<TextBox Name="txtTelephone2" Text="{Binding Path=PhoneSecondary, Mode=TwoWay}" Grid.Column="2" Grid.Row="2"/>
						</Grid>
					</GroupBox>
					<GroupBox Header="{Binding Source={StaticResource CultureResources},Path=[PlaceOnMap]}">
						<Button x:Name="btnMap" Content="{Binding Source={StaticResource CultureResources},Path=[Map]}" Click="btnMap_Click" VerticalAlignment="Center" HorizontalAlignment="Right" Margin="10,0" Width="200" />
					</GroupBox>
					<GroupBox Header="{Binding Source={StaticResource CultureResources},Path=[Photos]}" Margin="3">
						<Grid>
							<Grid.RowDefinitions>
								<RowDefinition />
								<RowDefinition Height="30"  />
							</Grid.RowDefinitions>
							<ItemsControl Name="lstImages" ItemsSource="{Binding Path=RealEstateImages, ElementName=addRealEstate}" 
                                      HorizontalAlignment="Stretch" Width="{Binding Path=ActualWidth, ElementName=addRealEstate}" >
								<ItemsControl.ItemsPanel>
									<ItemsPanelTemplate>
										<WrapPanel Orientation="Horizontal" Margin="5" />
									</ItemsPanelTemplate>
								</ItemsControl.ItemsPanel>
								<ItemsControl.ItemTemplate>
									<DataTemplate>
										<Border CornerRadius="5" Height="170" Margin="3" BorderBrush="Black" 
												BorderThickness="{Binding Path=IsMain, Converter={StaticResource IsMainToBorderThiknessConverter}}"
												ToolTip="{Binding Path=IsMain, Converter={StaticResource IsMainToToolTipConverter}}">
											<Border.ContextMenu>
												<ContextMenu Visibility="{Binding Path=IsSiteImagesSelectionEnabled, ElementName=addRealEstate, Converter={StaticResource BoolToVisibilityConverter}}">
													<MenuItem Header="Գլխավոր" Click="miMakeMain_Click" Tag="{Binding}" />
												</ContextMenu>
											</Border.ContextMenu>
											<Grid>
												<Grid.RowDefinitions>
													<RowDefinition />
													<RowDefinition Height="Auto"/>
												</Grid.RowDefinitions>
												<Image Source="{Binding Path=ImageFilePath}" Height="150" HorizontalAlignment="Center"/>
												<CheckBox IsChecked="{Binding Path=ShowInSite, Mode=TwoWay}" HorizontalAlignment="Left" VerticalAlignment="Top"
														  ToolTip="Ցուցադրել կայքում"
														  Visibility="{Binding Path=IsSiteImagesSelectionEnabled, ElementName=addRealEstate, Converter={StaticResource BoolToVisibilityConverter}}"/>
												<Button CommandParameter="{Binding}" Grid.Row="1" HorizontalAlignment="Center" Name="btnRemoveImage" Click="btnRemoveImage_Click" >
													<Button.Template>
														<ControlTemplate TargetType="Button">
															<TextBlock Text="{Binding Source={StaticResource CultureResources},Path=[Delete]}" Foreground="Blue" Cursor="Hand"/>
														</ControlTemplate>
													</Button.Template>
												</Button>
											</Grid>
										</Border>
									</DataTemplate>
								</ItemsControl.ItemTemplate>
							</ItemsControl>
							<Button Content="{Binding Source={StaticResource CultureResources},Path=[AddPhoto]}" Grid.Row="1" Name="btnAddImages" Click="btnAddImages_Click"
                                VerticalAlignment="Bottom" HorizontalAlignment="Right" Margin="0,5,10,5"/>
						</Grid>
					</GroupBox>

					<GroupBox Header="{Binding Source={StaticResource CultureResources},Path=[Videos]}" Margin="3">
						<Grid>
							<Grid.RowDefinitions>
								<RowDefinition />
								<RowDefinition Height="30"  />
							</Grid.RowDefinitions>
							<ItemsControl x:Name="lstVideos" ItemsSource="{Binding Path=EstateVideos, ElementName=addRealEstate}" 
                                      HorizontalAlignment="Stretch" Width="{Binding Path=ActualWidth, ElementName=addRealEstate}" >
								<ItemsControl.ItemsPanel>
									<ItemsPanelTemplate>
										<WrapPanel Orientation="Horizontal" Margin="5" />
									</ItemsPanelTemplate>
								</ItemsControl.ItemsPanel>
								<ItemsControl.ItemTemplate>
									<DataTemplate>
										<Border CornerRadius="5" Height="170" Margin="3" BorderThickness="1" BorderBrush="Black" >
											<StackPanel Orientation="Vertical">
												<Image Source="pack://application:,,,/Shared;component/Images/video.png" Height="150" HorizontalAlignment="Center"/>
												<Button CommandParameter="{Binding}" HorizontalAlignment="Center" Name="btnRemoveVideo" Click="btnRemoveVideo_Click" >
													<Button.Template>
														<ControlTemplate TargetType="Button">
															<TextBlock Text="{Binding Source={StaticResource CultureResources},Path=[Delete]}" Foreground="Blue" Cursor="Hand"/>
														</ControlTemplate>
													</Button.Template>
												</Button>
											</StackPanel>
										</Border>
									</DataTemplate>
								</ItemsControl.ItemTemplate>
							</ItemsControl>
							<Button Content="{Binding Source={StaticResource CultureResources},Path=[AddVideo]}" Grid.Row="1" Name="btnAddVideo" Click="btnAddVideo_Click"
                                VerticalAlignment="Bottom" HorizontalAlignment="Right" Margin="0,5,10,5"/>
						</Grid>
					</GroupBox>

					<StackPanel Orientation="Horizontal" HorizontalAlignment="Right" Margin="0,0,15,0"
                                Visibility="{Binding Source={x:Static UserControls:Session.Inst}, Path=User.IsAdminOrDirector, Converter={StaticResource BoolToVisibilityConverter}}">
						<TextBlock Text="{Binding Source={StaticResource CultureResources},Path=[BrokerP]}"/>
						<ComboBox ItemsSource="{Binding Path=Brokers, ElementName=addRealEstate}" 
                                  SelectedValue="{Binding Path=BrokerID, Mode=TwoWay}" SelectedValuePath="ID"
                                  SelectedItem="{Binding Path=User, Mode=TwoWay}" 
                                  DisplayMemberPath="FullName" IsEditable="False"/>
					</StackPanel>
					<StackPanel Orientation="Horizontal" HorizontalAlignment="Right" Margin="3,10,10,3">
						<Button Name="btnSave" Content="{Binding Path=EstateID, Converter={StaticResource EstateToActionButtonTextConverter}}" 
								Click="btnSave_Click" IsEnabled="{Binding ElementName=vpEstate, Path=IsValid}"/>
						<Button Name="btnClear" Content="{Binding Source={StaticResource CultureResources},Path=[Clear]}" Click="btnClear_Click" Margin="5,0,5,0" />
					</StackPanel>
				</StackPanel>
			</Grid>
		</CustomControls:ValidPanel>
	</ScrollViewer>
</UserControl>
